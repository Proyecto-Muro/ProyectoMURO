%%%%Environments 

\newcounter{Problemas}[subsection]
\newenvironment{problema}{
\stepcounter{Problemas}
\noindent{\bfseries\sffamily\large Problema \theProblemas.}
}{


\vspace{15pt}


}


\newcounter{Solutions}[subsection]
\newcounter{Claims}[Solutions]
\newcounter{Lemma}[Solutions]

\newenvironment{solution}[2]{
    \stepcounter{Solutions}
    \setcounter{Claims}{0}
    \setcounter{Lemma}{0}
    \phantomsection
    \begin{StatementBox}[frametitle = {\color{jampmTitle!90!black}\bfseries\sffamily\LARGE Problema \theSolutions} {\LARGE\itshape(#2, #1/\theSolutions)}.]
        {\color{jampmProblem}\normalsize \enunciado{#1}{#2}{\theSolutions}}
    \end{StatementBox}
}{%
    \vfill
    %\hrule 
    \eject
}%

\newenvironment{claim}{
    \stepcounter{Claims}
    \begin{claimBox}
        
        \begin{center}
            
}{%
        \end{center}
    \end{claimBox}
}%

\newenvironment{lemma}{
    \stepcounter{Lemma}   
    \begin{LemmaBox}
